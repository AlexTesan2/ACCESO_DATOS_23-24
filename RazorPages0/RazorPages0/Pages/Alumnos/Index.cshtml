@page
@model RazorPages0.Pages.Alumnos.IndexModel
@{
}
<h1>Alumnos</h1>
<h3>@Model.Alumnos.Count()</h3><!--Llamo de forma asincrona al ViewComponent-->
<div class="col-sm-8">
	@await Component.InvokeAsync("AlumnoCurso")
</div>
<div class="card-deck">
	@foreach(var alumno in Model.Alumnos)
	{
		var photo = "~/images/"+(alumno.Foto ?? "noimage.jpg");
		<div class="card m-3" style="min-width: 18rem; max-width: 30.5%">
			<div class="card-header">
				<h3>@alumno.Nombre</h3>
			</div>
			<img class="card-img-top imageThumbali" asp-append-version="true" src="@photo">
			<div class="card-footer text-center">
				<a asp-page="/Alumnos/Details" asp-route-ID="@alumno.Id" class="btn btn-primary m1">View</a>
				<a asp-page="/Alumnos/Edit" asp-route-ID="@alumno.Id" class="btn btn-primary m-1">Edit</a>
				<a asp-page="#" class="btn btn-danger m-1">Delete</a>
			</div>
		</div>
	}
</div>